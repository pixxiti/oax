{
  "name": "@oax/hooks",
  "version": "1.0.0",
  "description": "React Query v5 hooks for oax API clients",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write ."
  },
  "keywords": ["react-query", "hooks", "openapi", "zod", "typescript"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@oax/core": "workspace:*",
    "@tanstack/react-query": "^5.85.5",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "jsdom": "^26.1.0",
    "react": "^18.3.1",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0"
  }
}
